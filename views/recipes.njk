{% extends "layout.njk" %}

{% block head %}
    <title>Foodfy | Receitas</title>
{% endblock head %}

{% block content %}
    <main>

        <section class="recipes">

            <div class="cards">

                {% for recipe in recipes %}

                    <div class="card">
                        <img src="{{ recipe.image }}" alt="Imagem de {{ recipe.title }}">

                        <div class="card__title">
                            <p>{{ recipe.title }}</p>
                        </div>

                        <div class="card__author">
                            <p>{{ recipe.author }}</p>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </section>
    </main>

    <div class="modalOverlay">
        <div class="modal">
            <img src="" alt="">

            <h1></h1>
            <h2></h2>

            <p>Fechar modal</p>
        </div>
    </div>

{% endblock content %}

{% block scripts %}
    <script src="scripts.js"></script>
    <script src="header.js"></script>
{% endblock scripts %}
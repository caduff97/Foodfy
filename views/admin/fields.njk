<div class="item">
    <div>Imagem da receita</div>
    <div>
        <input
        type="url"
        name="image_url"
        value="{{ recipe.image_url }}">
    </div>
</div>

<div class="item">
    <div>Título da receita</div>
    <div>
        <input
        type="text"
        name="title"
        value="{{ recipe.title }}">
    </div>
</div>

<div class="item">
    <div>Autor</div>
    <div>
        <input
        type="text"
        name="author"
        value="{{ recipe.author }}">
    </div>
</div>

<div class="item">
    <div>Ingredientes</div>
    <div id="ingredients">
        {% for ingredient in recipe.ingredients %}
            <div class="ingredient">
                <input
                type="text"
                name="ingredients[]"
                value="{{ ingredient }}">
                <button type="button" class="rm-item material-icons">remove_circle_outline</button>
            </div>
        {% endfor %}
        {% if recipe.ingredients|length == 0 %}
            <div class="ingredient">
                <input
                type="text"
                name="ingredients[]"
                value="{{ ingredient }}">
                <button type="button" class="rm-item material-icons">remove_circle_outline</button>
            </div>        
        {% endif %}
        
    </div>
    <button type="button" class="add-ingredient">Adicionar novo ingrediente</button>
</div>

<div class="item">
    <div>Modo de preparo</div>
    <div id="steps">
        {% for step in recipe.steps %}
            <div class="step">
                <input
                type="text"
                name="steps[]"
                value="{{ step }}">
                <button type="button" class="rm-item material-icons">remove_circle_outline</button>
            </div>
        {% endfor %}
        {% if recipe.steps|length == 0 %}
            <div class="step">
                <input
                type="text"
                name="steps[]"
                value="{{ step }}">
                <button type="button" class="rm-item material-icons">remove_circle_outline</button>
            </div>        
        {% endif %}
    </div>
    <button type="button" class="add-step">Adicionar novo passo</button>
</div>

<div class="item">
    <div>Informações adicionais</div>
    <div>
        <textarea
        type="text"
        name="information"
        >{{ recipe.information | striptags(true) | escape | nl2br }}</textarea>
    </div>
</div>
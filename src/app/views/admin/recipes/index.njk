{% extends "../../admin/layout.njk" %}

{% block content %}

    <main class="admin">
        <section>
            <div>
                
                <div class="title">
                    <strong>Gerenciar receitas</strong>
                    <a href="/admin/recipes/create">Criar receita</a>
                </div>

                <div class="recipesCards">

                    {% for recipe in recipes %}

                        <div class="recipeCard">
                            <div 
                                class="recipe_img"
                                style="background: url('{{recipe.files[0].src}}') no-repeat center center / cover;">
                            </div>
                            
                            <div class="recipe_details">
                                <div class="recipe_title">
                                    <p>{{ recipe.title }}</p>
                                </div>

                                <div class="recipe_chef">
                                    <p>por {{ recipe.chef_name }}</p>
                                </div>

                                <div class="recipe_link">
                                    <a href="/admin/recipe/{{ recipe.id }}">Visualizar</a>
                                </div>
                            </div>
                        </div>

                    {% endfor %}

                </div>

            </div>
        </section>
    </main>

{% endblock content %}